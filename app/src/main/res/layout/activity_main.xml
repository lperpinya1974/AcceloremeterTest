<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
     android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingRight="@dimen/activity_horizontal_margin"
     android:paddingTop="@dimen/activity_vertical_margin"
     android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

     <TextView android:text="X: " android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/textX" />

     <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textAppearance="?android:attr/textAppearanceSmall"
     android:id="@+id/valueX"
     android:layout_alignParentTop="true"
     android:layout_toRightOf="@+id/textX"
     android:layout_toEndOf="@+id/textX" />

     <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textAppearance="?android:attr/textAppearanceSmall"
     android:text="Y: "
     android:id="@+id/textY"
     android:layout_below="@+id/textX"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true" />

     <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textAppearance="?android:attr/textAppearanceSmall"
     android:id="@+id/valueY"
     android:layout_below="@+id/valueX"
     android:layout_alignLeft="@+id/valueX"
     android:layout_alignStart="@+id/valueX" />

       <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textAppearance="?android:attr/textAppearanceSmall"
     android:text="Z: "
     android:id="@+id/textZ"
     android:layout_below="@+id/textY"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true" />

     <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textAppearance="?android:attr/textAppearanceSmall"
     android:id="@+id/valueZ"
     android:layout_below="@+id/textY"
     android:layout_toRightOf="@+id/textY"
     android:layout_toEndOf="@+id/textY" />

     </RelativeLayout>
